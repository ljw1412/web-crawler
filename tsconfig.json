{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": ".temp/lib",
    "sourceMap": false,
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["esnext", "dom"],
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "project/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
